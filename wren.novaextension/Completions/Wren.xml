<?xml version="1.0" encoding="UTF-8"?>
<completions>
    <provider>
        <syntax>wren</syntax>
        <expression>\b[a-zA-Z]*</expression>
        <set>wren.keywords</set>
    </provider>
    <provider>
        <syntax>wren</syntax>
        <expression>\b[a-zA-Z]*</expression>
        <set>wren.builtins.classes</set>
    </provider>

    <!-- Keywords -->
    <set name="wren.keywords">
        <completion string="as" />
        <completion string="break" />
        <completion string="class" />
        <completion string="construct" />
        <completion string="continue" />
        <completion string="else" />
        <completion string="false" />
        <completion string="for" />
        <completion string="foreign" />
        <completion string="if" />
        <completion string="import" />
        <completion string="in" />
        <completion string="is" />
        <completion string="null" />
        <completion string="return" />
        <completion string="static" />
        <completion string="super" />
        <completion string="this" />
        <completion string="true" />
        <completion string="var" />
        <completion string="while" />
    </set>

    <!-- Built-in Classes -->
    <set name="wren.builtins.classes">
        <completion string="Bool" />
        <completion string="Class" />
        <completion string="Fiber" />
        <completion string="Fn" />
        <completion string="List" />
        <completion string="Map" />
        <completion string="Null" />
        <completion string="Num" />
        <completion string="Object" />
        <completion string="Range" />
        <completion string="Sequence" />
        <completion string="String" />
        <completion string="System" />
    </set>

    <!-- Built-in System class methods -->
    <!-- FIXME: -->
    <set name="wren.builtins.system">
        <completion string="print" />
    </set>
</completions>
